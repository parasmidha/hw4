<div>
  <h1><%= @place["name"] %></h1>

  <div class = "mt-4 mb-4">
    <a class= "btn btn-dark" href="/posts/new?place_id=<%= @place["id"]%>"  role = "button" >New Post</a>
  </div>


  <% if @current_user %>

  <div class="row">
    <% for post in @posts %>
      <div class="col-lg-4 pb-2">
        <h3><%= post["title"] %></h3>
        <h4><%= post["posted_on"] %></h4>
        <% if post.uploaded_image.attached? %>
          <img src="<%= url_for(post.uploaded_image) %>" class="img-fluid">
        <% else %>
        <% end %>
        <p><%= post["description"] %></p>
      </div>
    <% end %>
  </div>

  <% else %>
  Please <a href="/login">log in</a> to see your posts.
  <% end%>


  <p>
    <a href="/places">Back to all places</a>
  </p>
</div>